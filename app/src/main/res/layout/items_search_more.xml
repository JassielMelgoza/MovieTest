<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="124dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

    <customviews.autoresize.AutoResizeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_search_more"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            app:fontFamily="@font/monserrat"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_search_w"
            android:drawableEnd="@drawable/ic_search_w"
            android:textSize="@dimen/mediumTextSize"
            app:minSize="@dimen/normalTextSize"
            app:maxSize="@dimen/exLargeTextSize"/>

</androidx.cardview.widget.CardView>